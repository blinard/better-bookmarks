{
    "compileOnSave": false,
    "compilerOptions": {
        "module": "es2015",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "target": "es2015",
//        "target": "es5",
        "outDir": "./_buildtemp",
        "declaration": true,
        "lib": ["es6", "dom"],
        "types": ["reflect-metadata", "chrome"],
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "skipLibCheck": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "_buildtemp",
        "_dist"
    ]
}