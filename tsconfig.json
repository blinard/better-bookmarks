{
    "compileOnSave": false,
    "compilerOptions": {
        "module": "es2015",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "target": "es2015",
        "outDir": "./dist",
        "declaration": true,
        "lib": ["es6", "dom"],
        "types": ["reflect-metadata", "chrome"],
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "skipLibCheck": true
    },
    "include": [
        "**/*"
    ],
    "exclude": [
        "node_modules",
        "chrome-extension",
        "bb.ui.options",
        "dist"
    ]
}