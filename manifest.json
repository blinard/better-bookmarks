{
  "name": "Better Bookmarks",
  "description" : "Type 'bb' plus a bookmark key into the Omnibox.",
  "version": "1.0",
  "background": {
    "scripts": ["authEnv.js", "auth0chrome.min.js", "jwt-decode.min.js", "backgroundServices.js"]
  },
  "omnibox": { "keyword" : "bb" },
  "browser_action": {
    "default_icon": "images/bb-icon.png",
    "default_popup": "browserAction/browserAction.html"
  },
  "options_page": "options/options.html",
  "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "identity",
    "notifications",
    "https://*.auth0.com/*",
    "http://localhost:5001/*"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "manifest_version": 2
}
